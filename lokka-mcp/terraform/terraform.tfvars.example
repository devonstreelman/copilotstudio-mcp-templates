# Copy this file to terraform.tfvars and update the values below

# Azure Resource Configuration
resource_group_name = "UPDATE_RESOURCE_GROUP_NAME"  # e.g., "Devon_Streelman_test"
location           = "UPDATE_AZURE_REGION"         # e.g., "West US 3"
prefix            = "UPDATE_RESOURCE_PREFIX"       # e.g., "cg-lokka-mcp"

# Container Registry (must be globally unique)
registry_name = "UPDATE_REGISTRY_NAME"             # e.g., "cglokkareg"

# Key Vault (must be globally unique)
key_vault_name = "UPDATE_KEY_VAULT_NAME"           # e.g., "cg-lokka-kv"

# Container Image Configuration
image_name = "lokka-mcp"
image_tag  = "http-clean"

# Azure AD Authentication
tenant_id     = "UPDATE_TENANT_ID"                 # Your Azure AD tenant ID
client_id     = "UPDATE_CLIENT_ID"                 # Your app registration client ID
client_secret = "UPDATE_CLIENT_SECRET"             # Your app registration client secret

# Optional: Create new app registration (set to true if you need Terraform to create the app)
create_app_registration = false